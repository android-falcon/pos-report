<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blue"
        android:padding="5dp">

        <TextView
            android:id="@+id/date"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="تاريخ"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/time"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="الوقت"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/trancNo"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="رمز الحركة "
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/trancType"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="نوع الحركة"

            android:textColor="@color/white" />

        <TextView
            android:id="@+id/itemNo"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="رمز المادة"

            android:textColor="@color/white" />

        <TextView
            android:id="@+id/itemName"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:gravity="center"

            android:text="اسم المادة"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/qty"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:gravity="center"

            android:text="الكمية"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/price"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:gravity="center"

            android:text="السعر"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/totalBT"
            android:layout_width="200dp"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:text="الصافي قبل الخصم"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/priceAT"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:gravity="center"

            android:text="السعر بعد الخصم"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/user"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:gravity="center"

            android:text="المستخدم"
            android:textColor="@color/white" />
    </TableRow>

</LinearLayout>